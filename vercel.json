{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],

  "headers": [
    {
      "source": "/:file*.(png|jpg|jpeg|webp|svg|gif|ico)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
